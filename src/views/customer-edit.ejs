<%- include ('partials/_principal-header.ejs')%>
<%- include ('partials/_header.ejs')%>

<div class="container">
    <div class="row">
        <div class="col-12 col-sm-10 offset-sm-1 col-lg-6 offset-lg-3">
            <div class="card mt-4">
                <div class="card-header text-white">
                    <p class="title">Actualiza tus datos</p>
                </div>
                <div class="card-body p-4">
                    <form action="/update/ <%= data.id %> " method="post" class="p-4">
                        <div class="form-group">
                            <input type="text" name="name" placeholder="Name" value=" <%= data.name %> " class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="address" placeholder="Address" value=" <%= data.address %> " class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="phone" placeholder="Phone" value=" <%= data.phone %> " class="form-control">
                        </div>
                        <button type="submit" class="btn btn-success btn-block">Actualizar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>




<%- include ('partials/_footer.ejs')%>